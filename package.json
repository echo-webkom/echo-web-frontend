{
    "name": "echo-web-frontend",
    "description": "Frontend til nettsiden til echo â€“ Fagutvalget for informatikk.",
    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "homepage": "https://github.com/echo-webkom/echo-web-frontend",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "lint": "next lint",
        "test": "jest",
        "e2e": "docker-compose down && docker-compose up --build --exit-code-from=frontend",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "babel": {
        "presets": [
            "next/babel"
        ]
    },
    "dependencies": {
        "@chakra-ui/react": "1.6.5",
        "@emotion/react": "11.4.1",
        "@emotion/styled": "11.3.0",
        "axios": "0.21.1",
        "date-fns": "2.23.0",
        "dotenv": "10.0.0",
        "framer-motion": "4.1.17",
        "markdown-to-jsx": "7.1.3",
        "next": "11.1.0",
        "nextjs-progressbar": "0.0.11",
        "prop-types": "15.7.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-hook-form": "7.12.2",
        "react-icons": "4.2.0",
