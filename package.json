    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "homepage": "https://github.com/echo-webkom/echo-web-frontend",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "lint": "tsc --noEmit && eslint src --fix",
        "test": "jest",
        "e2e": "docker-compose down && docker-compose up --build --exit-code-from=frontend",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "babel": {
        "presets": [
            "next/babel"
        ]
    },
