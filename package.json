{
    "name": "echo-web-frontend",
    "description": "Frontend til nettsiden til echo – Fagutvalget for informatikk.",
    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "homepage": "https://github.com/echo-webkom/echo-web-frontend",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "lint": "next lint",
        "test": "jest",
        "e2e": "docker-compose down && docker-compose up --build --exit-code-from=frontend",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": "./tsconfig.json"
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended",
            "next/core-web-vitals"
        ],
        "env": {
            "browser": true,
            "es6": true
        },
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "ignorePatterns": [
            "*.js",
            "node_modules/",
            "public/",
            ".next/"
        ],
        "rules": {
            "no-console": 1,
            "react/jsx-props-no-spreading": "off",
            "linebreak-style": "off"
        }
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "testEnvironment": "jsdom",
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/node_modules/",
            "testing-utils.js",
            "testing-wrapper.tsx",
            "mock-responses.ts",
            "<rootDir>/cypress/"
        ]
    },
    "babel": {
        "presets": [
            "next/babel"
        ]
    },
    "renovate": {
        "extends": [
            "config:base"
        ],
        "labels": [
            "dependencies :handshake:"
        ],
        "commitMessagePrefix": "⬆️ ",
        "prHourlyLimit": 0,
        "stabilityDays": 3,
        "prCreation": "not-pending",
        "ignoreDeps": [
            "postgres",
            "node"
        ]
    },
    "dependencies": {
        "@chakra-ui/react": "1.6.9",
        "@emotion/react": "11.4.1",
        "@emotion/styled": "11.3.0",
        "@sanity/client": "2.19.0",
        "axios": "0.21.4",
        "date-fns": "2.25.0",
        "framer-motion": "4.1.17",
        "markdown-to-jsx": "7.1.3",
        "next": "11.1.2",
        "nextjs-progressbar": "0.0.11",
        "prop-types": "15.7.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-hook-form": "7.17.2",
        "react-icons": "4.3.1",
        "remove-markdown": "0.3.0",
        "typescript-json-decoder": "1.0.3"
    },
    "devDependencies": {
        "@babel/core": "7.15.8",
        "@testing-library/dom": "8.7.2",
        "@testing-library/jest-dom": "5.14.1",
        "@testing-library/react": "12.1.2",
        "@testing-library/user-event": "13.2.1",
        "@types/jest": "27.0.2",
        "@types/node": "14.17.21",
        "@types/react": "17.0.27",
        "@types/remove-markdown": "0.3.1",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "babel-jest": "27.2.5",
        "cypress": "8.5.0",
        "eslint": "7.32.0",
        "eslint-config-next": "11.1.2",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.2",
        "jest": "27.2.5",
        "lint-staged": "11.2.0",
        "msw": "0.35.0",
        "prettier": "2.4.1",
        "typescript": "4.4.3"
    }
}
